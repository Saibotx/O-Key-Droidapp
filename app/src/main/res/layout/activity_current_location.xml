<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saibot.test1.CurrentLocationActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:id="@+id/current_location_header"
        android:src="@drawable/current_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:gravity="bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_height="370dp"
        android:id="@+id/current_location_bottom"
        android:src="@drawable/current_bottom"
        android:scaleType="centerCrop"
        android:gravity="bottom"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:id="@+id/cl_logo"
        android:src="@drawable/logo_black"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/current_location_header"
        android:layout_alignStart="@+id/current_location_header"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:id="@+id/settingsButton"
        android:layout_alignParentEnd="true"
        android:src="@drawable/settings_black"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:id="@+id/menuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/menu_button_black"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cl_seelogs_button"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/current_location_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:onClick="cl_seelogs" />

    <FrameLayout
        android:layout_marginLeft="-283dp"
        android:layout_width="283dp"
        android:layout_height="fill_parent"
        android:id="@+id/menuLayout">

        <ImageView
            android:layout_width="283dp"
            android:layout_height="fill_parent"
            android:id="@+id/menuView"
            android:src="@drawable/menu_smal"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/menu_menu_button"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:onClick="menu_toggle"
            android:layout_gravity="right" />

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text=""
            android:id="@+id/menu_dashboard_button"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:onClick="go_dashboard"
            android:layout_gravity="right"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:id="@+id/Mange"
            android:text=""
            android:layout_marginBottom="50dp"
            android:layout_marginTop="350dp"
            android:onClick="go_manage"
            android:background="@null"
            android:layout_gravity="right" />
    </FrameLayout>
</RelativeLayout>
