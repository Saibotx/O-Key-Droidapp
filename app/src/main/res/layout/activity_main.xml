<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/derp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ClearButt"
        android:text="C.Perm"
        android:onClick="clearButton"
        android:layout_below="@+id/DenyBut"
        android:layout_toEndOf="@+id/findBut" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="UserId"
        android:ems="10"
        android:id="@+id/UserID"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auth"
        android:id="@+id/AuthorizeButt"
        android:onClick="authButton"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/logbut" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deny"
        android:id="@+id/DenyBut"
        android:onClick="denyButton"
        android:layout_alignTop="@+id/AuthorizeButt"
        android:layout_toEndOf="@+id/AuthorizeButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/findBut"
        android:onClick="findButton"
        android:layout_below="@+id/DenyBut"
        android:layout_toEndOf="@+id/logbut" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/listBut"
        android:onClick="listButton"
        android:layout_above="@+id/findBut"
        android:layout_toEndOf="@+id/DenyBut" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logs"
        android:id="@+id/logbut"
        android:onClick="logsButton"
        android:layout_alignTop="@+id/clearlogButt"
        android:layout_toEndOf="@+id/clearlogButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C.Log"
        android:id="@+id/clearlogButt"
        android:onClick="clearlogButton"
        android:layout_below="@+id/DenyBut"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Scrollview"
        android:fillViewport="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserID">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Msg"
        android:id="@+id/button"
        android:layout_alignTop="@+id/listBut"
        android:layout_toEndOf="@+id/listBut"
        android:layout_above="@+id/ClearButt"
        android:onClick="sendClick" />

</RelativeLayout>
